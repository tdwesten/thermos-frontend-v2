<div class="flex justify-center">
  <Form
    @onSubmit={{this.onSubmit}}
    @model={{@model}}
    class="grid w-full max-w-md grid-cols-6 gap-6 p-6 m-3 border border-gray-300 dark:border-slate-700"
    as |form|
  >
    <div class="col-span-6 dark:text-slate-300">
      <h1 class="pb-3 text-2xl font-semibold">
        {{t "header_title.programs.edit"}}
      </h1>
      <p class="pb-3 text-sm text-gray-500 dark:text-slate-400">
        {{t "header_title.programs.edit_description"}}
      </p>
    </div>
    <div class="col-span-6">
      <ValidatedInput
        @changeset={{form.changeset}}
        @id="name"
        @type="text"
        @label={{t "label.name"}}
        @placeholder={{t "placeholder.thermostat-name"}}
        @autocomplete=""
        @valuePath="name"
      />
    </div>
    <div class="col-span-6">
      <ValidatedInput
        @changeset={{form.changeset}}
        @id="targetTemperature"
        @type="number"
        step="0.25"
        @label={{t "label.target_temperature"}}
        @placeholder={{t "placeholder.min-temp"}}
        @valuePath="targetTemperature"
      />
    </div>
    <div class="col-span-6">
      <ValidatedInput
        @changeset={{form.changeset}}
        @id="startTime"
        @type="time"
        @label={{t "label.start-time"}}
        @placeholder={{t "placeholder.min-temp"}}
        @valuePath="startTime"
      />
    </div>
    <div class="col-span-6">
      <ValidatedInput
        @changeset={{form.changeset}}
        @id="endTime"
        @type="time"
        @label={{t "label.end-time"}}
        @placeholder={{t "placeholder.min-temp"}}
        @valuePath="endTime"
      />
    </div>
    <div class="col-span-6">
      <ValidatedInput
        @changeset={{form.changeset}}
        @id="isActive"
        @type="checkbox"
        @label={{t "label.is-active"}}
        @valuePath="isActive"
      />
    </div>
    <div class="flex justify-between">
      <Button
        @type="submit"
        @isLoading={{this.isLoading}}
        @disabled={{or form.changeset.isInvalid}}
        class="col-span-6"
      >
        {{t "button.save"}}
      </Button>
    </div>
  </Form>
</div>