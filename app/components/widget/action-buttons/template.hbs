<div class="grid grid-cols-3 gap-2 my-2 font-bold dark:text-slate-300">
  {{#each this.actions as |action|}}
    <button
      class="flex items-center justify-center p-4 border rounded hover:bg-gray-100 dark:border-slate-600 dark:hover:bg-slate-700
        {{action.class}}"
      {{on "click" action.onClick}}
    >
      <Icon @name={{action.icon}} />
    </button>
  {{/each}}
</div>