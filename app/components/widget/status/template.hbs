<div
  class="flex items-center justify-center flex-1 text-gray-700 dark:text-slate-300"
>
  <div>
    {{#if @thermostat}}
      <div class="relative font-bold tracking-tighter text-center text-7xl">
        {{this.currentTemperature}}
        <span class="absolute text-2xl font-normal translate-x-1/2 top-1">
          {{@unit}}
        </span>

      </div>
      <div
        class="flex items-center justify-center gap-3 mt-2 text-center dark:text-slate-500"
      >
        <Icon
          @name={{this.currentState.icon}}
          class="mt-1 text-sm dark:text-slate-400"
        />
        <span class="mt-1">
          {{this.currentState.message}}
        </span>
        {{#if this.isHeating}}
          <Icon
            @name="local_fire_department"
            class="text-sm text-red-600 animate-pulse"
          />
        {{/if}}

      </div>
      <div class="flex items-center justify-center gap-3 mt-2 text-center">
        <Icon @name="thermostat" class="mt-1 text-sm dark:text-slate-400" />
        <span class="mt-1">
          {{@thermostat.mode}}
        </span>
      </div>
      <div class="flex items-center justify-center gap-3 mt-2 text-center">
        <Icon @name="update" class="mt-1 text-sm dark:text-slate-400" />
        <span class="mt-1">
          {{@thermostat.updatedAt}}
        </span>
      </div>
    {{/if}}
  </div>
</div>