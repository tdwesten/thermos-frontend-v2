<div>
  <label
    for={{@id}}
    class="block text-sm font-medium text-gray-700 dark:text-slate-400"
  >
    {{@label}}
  </label>
  {{#if this.hasError}}
    <InputErrorMessage @message={{t this.errorMessage}} />
  {{/if}}
  {{#if this.isTextarea}}
    <Textarea
      id={{@id}}
      rows="4"
      autofocus={{@autofocus}}
      tabindex="{{@tabindex}}"
      placeholder={{@placeholder}}
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none sm:text-sm dark:bg-slate-700 dark:text-slate-300 dark:border-slate-600
        {{this.borderClasses}}"
      @value={{get @changeset @valuePath}}
      {{on "blur" this.onBlur}}
    />
  {{else}}
    <Input
      id={{@id}}
      @type={{@type}}
      placeholder={{@placeholder}}
      class="mt-1 block w-full border rounded-md shadow-sm py-2 px-3 focus:outline-none sm:text-sm dark:bg-slate-700 dark:text-slate-300 dark:border-slate-600
        {{this.borderClasses}}"
      @checked={{@checked}}
      autocomplete={{@autocomplete}}
      @disabled={{@disabled}}
      autofocus={{@autofocus}}
      tabindex="{{@tabindex}}"
      @value={{get @changeset @valuePath}}
      pattern={{@pattern}}
      {{on "blur" this.handleOnBlur}}
      ...attributes
    />
  {{/if}}
</div>