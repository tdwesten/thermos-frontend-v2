<div {{did-update this.updateComponent @model}}>
  {{#if this.changeset}}
    <form {{on "submit" this.submit}} ...attributes>
      {{yield
        (hash
          changeset=this.changeset
          errors=this.errors
          isValid=this.changeset.isValid
          isInvalid=this.isInvalid
          isLoading=@isLoading
        )
      }}
    </form>
  {{/if}}
</div>